        <listener>
            <listener-class>com.enterprise.rental.utils.Listener</listener-class>
        </listener>

        <jsp-config>
            <taglib>
                <taglib-uri>rental.enterprise.com</taglib-uri>
                <taglib-location>/WEB-INF/dataTag.tld</taglib-location>
            </taglib>
        </jsp-config>

    <session-config>
        <session-timeout>6</session-timeout>
    </session-config>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/views/error/500.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/error/404.jsp</location>
    </error-page>

</web-app>